<Page
    x:Class="Famoser.RememberLess.Presentation.WindowsUniversal.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mainPage="using:Famoser.RememberLess.Presentation.WindowsUniversal.UserControls.MainPage"
    mc:Ignorable="d"
    DataContext="{Binding MainViewModel, Source={StaticResource Locator}}">


    <Grid Padding="10" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox VerticalAlignment="Center" Margin="0,5" Padding="6" Text="{Binding NewNote, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0"  />
                    <Button Margin="10,0,10,0" Padding="5,5" Grid.Column="1" Background="{ThemeResource SystemControlBackgroundAccentBrush}" Foreground="{ThemeResource ApplicationPageBackgroundThemeBrush}" Command="{Binding AddNoteCommand}" >
                        <Button.Content>
                            <SymbolIcon Symbol="Add" />
                        </Button.Content>
                    </Button>
                </Grid>
                <TextBlock Grid.Row="1" Text="remember" Style="{ThemeResource HeaderTextBlockStyle}" />
                <mainPage:NoteList Grid.Row="2" DataContext="{Binding NewNotes}" />
                <TextBlock Grid.Row="3" Text="remembered" Style="{ThemeResource HeaderTextBlockStyle}"/>
                <mainPage:NoteList Grid.Row="4" DataContext="{Binding CompletedNotes}" />
            </Grid>
        </ScrollViewer>

    </Grid>
    <Page.BottomAppBar>
        <CommandBar >
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Link" Command="{Binding ConnectCommand}" />
                <AppBarButton Command="{Binding RefreshCommand}" Icon="Refresh" />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
